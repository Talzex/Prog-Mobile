<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_scan" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:spinnerMode="dropdown"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/TextView_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_title" />

        <TextView
            android:id="@+id/TextViewAuteur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_autor" />

        <TextView
            android:id="@+id/TextViewYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_year" />

        <TextView
            android:id="@+id/TextViewLangue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_langue" />

        <TextView
            android:id="@+id/TextViewCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_collec" />

        <TextView
            android:id="@+id/textViewEditeur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_editor" />

        <TextView
            android:id="@+id/TextViewASIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_asin" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="218dp"
            android:layout_height="264dp"
            app:srcCompat="@android:drawable/divider_horizontal_bright" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>